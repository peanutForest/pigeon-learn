<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean class="com.dianping.pigeon.remoting.provider.config.spring.ServiceBean" init-method="init">
        <property name="services">
            <map>
                <entry key="org.example.pigeon.test.EchoService" value-ref="echoServiceImpl"/>
            </map>
        </property>
        <property name="port">
            <value>5008</value>
        </property>
    </bean>

    <bean id="echoServiceImpl" class="org.example.pigeon.test.tradition.EchoServiceImpl"/>
</beans>